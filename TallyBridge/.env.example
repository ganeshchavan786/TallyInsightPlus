# Application Settings
APP_NAME=Application Starter Kit
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# ==================== DATABASE CONFIGURATION ====================
# Choose ONE of the following database URLs based on your needs:

# Option 1: SQLite (Default - for local development)
DATABASE_URL=sqlite:///./app.db

# Option 2: SQL Server (for production/enterprise)
# DATABASE_URL=mssql+pyodbc://username:password@server_name/database_name?driver=ODBC+Driver+17+for+SQL+Server

# Option 3: PostgreSQL (popular for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Option 4: MySQL (popular for web applications)
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/database_name

# Security - CHANGE IN PRODUCTION!
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8080

# Logging
LOG_LEVEL=INFO

# ==================== EMAIL MICROSERVICE ====================

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=Application Starter Kit

# Redis (for idempotency)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Encryption Key (32 bytes for AES-256)
ENCRYPTION_KEY=your-32-byte-encryption-key-here
